{{#partial "content"}}

    {{#if editFlowers}}
        <h3>Change Your Team Name</h3>

        <form action="/flowers/{{editFlowers.id}}/update" method="post">
            <label for="flower1">Team Name</label>
            <input id="flower1" name="flower1" type="text">
            <button type="submit" class="btn btn-default">Update Name</button>
        </form>
    {{else if addMember}}
        <h3>Add a Team Member</h3>

        <form action="/flowers/{{addMember.id}}/add-member" method="post">
            <label for="member">Member Name</label>
            <input id="member" name="member" type="text">
            <button type="submit" class="btn btn-default">Add Member</button>
        </form>
    {{else}}
        <h1>Add a new Team!</h1>

        <h2>Please enter a team name, description, and name of team leader</h2>
        <h3>More team members can be added later</h3>

        <form action="/flowers/new" method="post">
            <label for="flower1">Team Name</label>
            <input id="flower1" name="flower1" type="text">
            <label for="flower2">Team Description</label>
            <input id="flower2" name="flower2" type="text">
            <label for="teamHead">Team Leader Name</label>
            <input id="teamHead" name="teamHead" type="text">

            <button type="submit" class="btn btn-default">Create a New Team</button>
        </form>
    {{/if}}


{{/partial}}

{{> layout.hbs}}